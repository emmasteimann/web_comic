<div class="wrapper">
<div id="banner"><div id="min_hand"></div><div id="hour_hand"></div></div>
	<div id="comic_area" class="clearfix">
		<h1>Something About Radishes</h1>
		<div class="navigation">
		<% if @comfirst %>
			<a class="nav_arrows first" data-disqus-identifier="<%= @comfirst.id %>" href="/comics/<%= @comfirst.id %>#comic_area">First</a>
		<% end %>
		<% if @comprev %>
			<a class="nav_arrows previous" data-disqus-identifier="<%= @comprev.id %>" href="/comics/<%= @comprev.id %>#comic_area">Previous</a>
		<% end %>
		<%= link_to "Archive", {:controller => "archive"}, :class => "archive_link" %>
		<% if @comnext %>
			<a class="nav_arrows next" data-disqus-identifier="<%= @comnext.id %>" href="/comics/<%= @comnext.id %>#comic_area">Next</a>
		<% end %>
		<% if @comfinal %>
			<a class="nav_arrows last"  data-disqus-identifier="<%= @comfinal.id %>" href="/comics/<%= @comfinal.id %>#comic_area">Last</a>
		<% end %>
		</div>
		<div class="comic_display_area">
			
			<p>
				<img class="comic_img comic_<%= @comic.id %>" title="<%= @comic.alt_tag %>" src="<%= @comic.image %>">
			</p>
			<%= render 'bookmark' %>
		</div>
		<div class="navigation">
		<% if @comfirst %>
			<a class="nav_arrows first" data-disqus-identifier="<%= @comfirst.id %>" href="/comics/<%= @comfirst.id %>#comic_area">First</a>
		<% end %>
		<% if @comprev %>
			<a class="nav_arrows previous" data-disqus-identifier="<%= @comprev.id %>" href="/comics/<%= @comprev.id %>#comic_area">Previous</a>
		<% end %>
		<% if @comnext %>
			<a class="nav_arrows next" data-disqus-identifier="<%= @comnext.id %>" href="/comics/<%= @comnext.id %>#comic_area">Next</a>
		<% end %>
		<% if @comfinal %>
			<a class="nav_arrows last"  data-disqus-identifier="<%= @comfinal.id %>" href="/comics/<%= @comfinal.id %>#comic_area">Last</a>
		<% end %>
		</div>
		<div class="comic_details">
			<h2><%= @comic.title %></h2>
			<div class="comic_description">
				<%= raw @comic.body %>
			</div>
		</div>
		<div class="comic_info">
			<h2>Comments</h2>
			<script type="text/javascript">
				/* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
				var disqus_shortname = 'somethingaboutradishes'; // required: replace example with your forum shortname
				var disqus_identifier = '/comics/<%= @comic.id %>';
				var disqus_developer = 1;
			</script>
			<div id ="disqus_thread">
			<%= raw(disqus_thread) %>
			</div>
			<script type="text/javascript" src="http://disqus.com/forums/rapexegesis/embed.js"></script>
		</div>
		<div class="social_area">
			<div class="addthis_toolbox addthis_default_style ">
				<div class="fb-like" data-href="<%= request.url %>" data-send="true" data-width="450" data-show-faces="true"></div>
				<!--
				<a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
				<a class="addthis_button_tweet"></a>
				<a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
				<a class="addthis_counter addthis_pill_style"></a>-->
			</div>
			<!--<script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=xa-4e76dff04af2d5d1"></script>-->
			<h2>Rumors a little bird told me...</h2>
			<script src="http://widgets.twimg.com/j/2/widget.js"></script>
			<script>
			new TWTR.Widget({
			  version: 2,
			  type: 'profile',
			  rpp: 4,
			  interval: 30000,
			  width: 350,
			  height: 300,
			  theme: {
			    shell: {
			      background: '#d7d5ce',
			      color: '#666666'
			    },
			    tweets: {
			      background: '#ebebeb',
			      color: '#666666',
			      links: '#633aa1'
			    }
			  },
			  features: {
			    scrollbar: false,
			    loop: false,
			    live: false,
			    hashtags: true,
			    timestamp: true,
			    avatars: false,
			    behavior: 'all'
			  }
			}).render().setUser('esteimann').start();
			</script>
		</div>
	</div>
</div>